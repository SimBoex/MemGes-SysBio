<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="6dp"
    android:weightSum="2">
    <TextView
        android:id="@+id/elemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        android:hint="inserisci il tuo id" />

    <Button
        android:id="@+id/invio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inserisci il gesto"
        android:onClick="inserisciSessione"/>

    <TextView
        android:id="@+id/testo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ricordati di girare il telefono verso l'esterno\nclicca sul pulsante + per registrare il gesto\nclicca il pulsante - per terminare\nla prima figura da eseguire sarÃ  un cerchio">
    </TextView>


</LinearLayout>